---
import EntryCard from '../components/EntryCard.astro';
import yaml from 'js-yaml';
import { readFileSync, readdirSync } from 'fs';
import { join } from 'path';

// Get entries directory relative to project root
const entriesDir = join(process.cwd(), 'src', 'data', 'entries');

// Load all YAML entry files
const entryFiles = readdirSync(entriesDir).filter(f => f.endsWith('.yaml'));

// Convert to array with IDs derived from filenames
const entriesData = entryFiles.map(filename => {
  const id = filename.replace('.yaml', '');
  const filePath = join(entriesDir, filename);
  const fileContent = readFileSync(filePath, 'utf-8');
  const data = yaml.load(fileContent) as any;
  return {
    id,
    ...data
  };
});

// Get all unique tags and categories
const allTags = [...new Set(entriesData.flatMap(entry => entry.tags))].sort();
const allCategories = [...new Set(entriesData.map(entry => entry.category))].sort();

// Helper to construct URLs with base path
const baseUrl = import.meta.env.BASE_URL.endsWith('/')
  ? import.meta.env.BASE_URL
  : `${import.meta.env.BASE_URL}/`;
const staticPageUrl = `${baseUrl}static`;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Community-curated list of useful software and repositories for lattice quantum field theory" />
    <title>Lattice QFT Software List</title>
    <script is:inline>
      (function() {
        const THEME_STORAGE_KEY = 'theme-preference';
        const html = document.documentElement;

        function getSystemTheme() {
          return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
        }

        function getStoredTheme() {
          return localStorage.getItem(THEME_STORAGE_KEY);
        }

        const stored = getStoredTheme() || 'system';
        const applied = stored === 'system' ? getSystemTheme() : stored;
        html.setAttribute('data-theme', applied);
      })();
    </script>
  </head>
  <body>
    <div class="container">
      <button id="theme-toggle" class="theme-toggle" title="Toggle theme" aria-label="Toggle theme">
        <svg class="theme-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path class="icon-sun" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"/>
          <path class="icon-moon" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"/>
          <path class="icon-monitor" d="M5 17H4a2 2 0 01-2-2V5a2 2 0 012-2h16a2 2 0 012 2v10a2 2 0 01-2 2h-1M12 15v6M8 21h8" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
      <header>
        <a href="https://github.com/lattice-software/list" target="_blank" rel="noopener noreferrer" class="github-link">
          <svg width="20" height="20" viewBox="0 0 16 16" fill="currentColor">
            <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"/>
          </svg>
          <span>See on GitHub</span>
        </a>
        <h1>Lattice QFT Software</h1>
        <p class="subtitle">Community-curated list of useful software and repositories for lattice quantum field theory</p>
        <p class="static-note">
          <a href={staticPageUrl}>Static version</a>
        </p>
      </header>

      <div class="controls">
        <div class="search-container">
          <input
            type="text"
            id="search-bar"
            placeholder="Search by name, description, or tag..."
            autocomplete="off"
          />
          <button id="clear-search" class="clear-btn" style="display: none;">Clear</button>
        </div>

        <div class="filters">
          <div class="filter-section">
            <h3>Filter by Tag:</h3>
            <div class="tag-list" id="tag-list">
              {allTags.map(tag => (
                <span class="filter-tag" data-tag={tag}>{tag}</span>
              ))}
            </div>
          </div>

          <div class="filter-section">
            <h3>Filter by Category:</h3>
            <div class="category-list" id="category-list">
              {allCategories.map(category => (
                <span class="filter-category" data-category={category}>{category}</span>
              ))}
            </div>
          </div>
        </div>

        <div class="results-info">
          <span id="results-count">{entriesData.length}</span> entries shown
        </div>
      </div>

      <div class="entries-grid" id="entries-grid">
        {entriesData.map(entry => (
          <EntryCard entry={entry} />
        ))}
      </div>

      <div id="empty-state" class="empty-state" style="display: none;">
        <p class="empty-state-text">No entries match your filters.</p>
        <p class="empty-state-hint">Try adjusting your search or filters.</p>
      </div>
    </div>
  </body>
</html>

<style>
  :global(html) {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    color-scheme: light dark;
  }

  :global(html[data-theme="light"]) {
    --bg-primary: #f8fafc;
    --bg-secondary: #f1f5f9;
    --bg-card: #ffffff;
    --text-primary: #1f2937;
    --text-secondary: #475569;
    --text-tertiary: #64748b;
    --text-quaternary: #94a3b8;
    --border-primary: #e2e8f0;
    --border-secondary: #cbd5e1;
    --border-tertiary: #f1f5f9;
    --accent-primary: #3b82f6;
    --accent-hover: #2563eb;
    --accent-light: #eff6ff;
    --accent-light-hover: #dbeafe;
    --accent-dark: #1e40af;
    --tag-bg: #eff6ff;
    --tag-text: #1e40af;
    --tag-hover-bg: #dbeafe;
    --category-bg: #f1f5f9;
    --category-text: #475569;
    --category-hover-bg: #e2e8f0;
    --category-active-bg: #6366f1;
    --category-active-text: #ffffff;
    --shadow-sm: rgba(0, 0, 0, 0.05);
    --shadow-md: rgba(30, 64, 175, 0.15);
    --shadow-accent: rgba(59, 130, 246, 0.1);
    --shadow-accent-md: rgba(59, 130, 246, 0.3);
    --shadow-category: rgba(99, 102, 241, 0.3);
    --shadow-red: rgba(239, 68, 68, 0.3);
    --button-red: #ef4444;
