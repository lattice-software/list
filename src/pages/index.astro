---
import EntryCard from '../components/EntryCard.astro';
import yaml from 'js-yaml';
import { readFileSync, readdirSync } from 'fs';
import { join } from 'path';

// Get entries directory relative to project root
const entriesDir = join(process.cwd(), 'src', 'data', 'entries');

// Load all YAML entry files
const entryFiles = readdirSync(entriesDir).filter(f => f.endsWith('.yaml'));

// Convert to array with IDs derived from filenames
const entriesData = entryFiles.map(filename => {
  const id = filename.replace('.yaml', '');
  const filePath = join(entriesDir, filename);
  const fileContent = readFileSync(filePath, 'utf-8');
  const data = yaml.load(fileContent) as any;
  return {
    id,
    ...data
  };
});

// Get all unique tags and categories
const allTags = [...new Set(entriesData.flatMap(entry => entry.tags))].sort();
const allCategories = [...new Set(entriesData.map(entry => entry.category))].sort();
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Community-curated list of useful software and repositories for lattice quantum field theory" />
    <title>Lattice QFT Software List</title>
  </head>
  <body>
    <div class="container">
      <header>
        <a href="https://github.com/lattice-software/list" target="_blank" rel="noopener noreferrer" class="github-link">
          <svg width="20" height="20" viewBox="0 0 16 16" fill="currentColor">
