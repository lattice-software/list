    --bg-primary: #0f172a;
    --bg-secondary: #1e293b;
    --bg-card: #1e293b;
    --text-primary: #f1f5f9;
    --text-secondary: #cbd5e1;
    --text-tertiary: #64748b;
    --text-quaternary: #94a3b8;
    --border-primary: #334155;
    --border-secondary: #475569;
    --border-tertiary: #334155;
    --accent-primary: #60a5fa;
    --accent-hover: #3b82f6;
    --accent-light: #1e3a8a;
    --accent-light-hover: #1e40af;
    --accent-dark: #93c5fd;
    --tag-bg: #1e3a8a;
    --tag-text: #93c5fd;
    --tag-hover-bg: #1e40af;
    --category-bg: #334155;
    --category-text: #cbd5e1;
    --category-hover-bg: #475569;
    --category-active-bg: #6366f1;
    --category-active-text: #ffffff;
    --shadow-sm: rgba(0, 0, 0, 0.3);
    --shadow-md: rgba(30, 64, 175, 0.3);
    --shadow-accent: rgba(96, 165, 250, 0.15);
    --shadow-accent-md: rgba(96, 165, 250, 0.3);
    --shadow-category: rgba(99, 102, 241, 0.4);
    --shadow-red: rgba(239, 68, 68, 0.4);
    --button-red: #ef4444;
    --button-red-hover: #f87171;
  }

  :global(html) {
    color: var(--text-primary);
  }

  :global(body) {
    margin: 0;
    padding: 0;
    background: linear-gradient(to bottom, var(--bg-primary) 0%, var(--bg-secondary) 100%);
    min-height: 100vh;
  }

  .container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 3rem 1.5rem;
  }

  header {
    text-align: center;
    margin-bottom: 4rem;
    position: relative;
  }

  .github-link {
    position: absolute;
    top: 0;
    right: 0;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-tertiary);
    text-decoration: none;
    font-size: 0.9375rem;
    font-weight: 500;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    transition: all 0.2s ease;
  }

  .github-link:hover {
    color: var(--text-primary);
    background: var(--bg-card);
  }

  .theme-toggle {
    position: fixed;
    left: 1.5rem;
    top: 1.5rem;
    z-index: 1000;
    background: var(--bg-card);
    border: 1px solid var(--border-primary);
    border-radius: 50%;
    width: 48px;
    height: 48px;
    padding: 0;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-tertiary);
    transition: all 0.2s ease;
    box-shadow: 0 2px 8px var(--shadow-sm);
  }

  .theme-toggle:hover {
    color: var(--text-primary);
    background: var(--bg-card);
    border-color: var(--border-secondary);
    box-shadow: 0 4px 12px var(--shadow-sm);
    transform: translateY(-1px);
  }

  .theme-icon {
    width: 20px;
    height: 20px;
  }

  .icon-sun {
    display: none;
  }

  .icon-moon {
    display: none;
  }

  .icon-monitor {
    display: block;
  }

  .theme-toggle[data-mode="light"] .icon-sun {
    display: block;
  }

  .theme-toggle[data-mode="light"] .icon-monitor {
    display: none;
  }

  .theme-toggle[data-mode="dark"] .icon-moon {
    display: block;
  }

  .theme-toggle[data-mode="dark"] .icon-monitor {
    display: none;
  }

  .github-link svg {
    flex-shrink: 0;
  }

  h1 {
    font-size: 3rem;
    font-weight: 700;
    margin: 0 0 0.75rem 0;
    color: var(--text-primary);
    letter-spacing: -0.02em;
    line-height: 1.1;
  }

  .subtitle {
    font-size: 1.25rem;
    color: var(--text-tertiary);
    margin: 0;
    font-weight: 400;
    line-height: 1.5;
  }

  .static-note {
    font-size: 0.9375rem;
    color: var(--text-quaternary);
    margin: 0.5rem 0 0 0;
  }

  .static-note a {
    color: var(--accent-primary);
    text-decoration: none;
  }

  .static-note a:hover {
    color: var(--accent-hover);
    text-decoration: underline;
  }

  .controls {
    background: var(--bg-card);
    border: 1px solid var(--border-primary);
    border-radius: 12px;
    padding: 2rem;
    margin-bottom: 2.5rem;
    box-shadow: 0 1px 3px 0 var(--shadow-sm);
  }

  .search-container {
    display: flex;
    gap: 0.75rem;
    margin-bottom: 2rem;
    position: relative;
  }

  #search-bar {
    flex: 1;
    padding: 0.875rem 1.125rem;
    border: 2px solid var(--border-primary);
    border-radius: 8px;
    font-size: 1rem;
    transition: all 0.2s ease;
    background: var(--bg-secondary);
    color: var(--text-primary);
  }

  #search-bar::placeholder {
    color: var(--text-quaternary);
  }

  #search-bar:focus {
    outline: none;
    border-color: var(--accent-primary);
    background: var(--bg-card);
    box-shadow: 0 0 0 4px var(--shadow-accent);
  }

  .clear-btn {
    padding: 0.875rem 1.5rem;
    background: var(--button-red);
    color: white;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    font-weight: 500;
    font-size: 0.9375rem;
    transition: all 0.2s ease;
    white-space: nowrap;
  }

  .clear-btn:hover {
    background: var(--button-red-hover);
    transform: translateY(-1px);
    box-shadow: 0 4px 6px -1px var(--shadow-red);
  }

  .clear-btn:active {
    transform: translateY(0);
  }

  .filters {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .filter-section h3 {
    margin: 0 0 1rem 0;
    font-size: 0.8125rem;
    font-weight: 600;
    color: var(--text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }

  .tag-list,
  .category-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.625rem;
  }

  .filter-tag {
    background: var(--tag-bg);
    color: var(--tag-text);
    padding: 0.5rem 1rem;
    border-radius: 6px;
    font-size: 0.875rem;
    cursor: pointer;
    transition: all 0.2s ease;
    user-select: none;
    border: 1.5px solid transparent;
    font-weight: 500;
  }

  .filter-tag:hover {
    background: var(--tag-hover-bg);
    transform: translateY(-1px);
    box-shadow: 0 2px 4px var(--shadow-md);
  }

  .filter-tag.active {
    background: var(--accent-primary);
    color: white;
    border-color: var(--accent-hover);
    box-shadow: 0 2px 4px var(--shadow-accent-md);
  }

  .filter-category {
    background: var(--category-bg);
    color: var(--category-text);
    padding: 0.5rem 1rem;
    border-radius: 6px;
    font-size: 0.875rem;
    cursor: pointer;
    transition: all 0.2s ease;
    user-select: none;
    border: 1.5px solid transparent;
    font-weight: 500;
  }

  .filter-category:hover {
    background: var(--category-hover-bg);
    transform: translateY(-1px);
    box-shadow: 0 2px 4px var(--shadow-sm);
  }

  .filter-category.active {
    background: var(--category-active-bg);
    color: var(--category-active-text);
    border-color: #4f46e5;
    box-shadow: 0 2px 4px var(--shadow-category);
  }

  .results-info {
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--border-primary);
    font-size: 0.9375rem;
    color: var(--text-tertiary);
    font-weight: 500;
  }

  .results-info #results-count {
    color: var(--text-primary);
    font-weight: 600;
  }

  .entries-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
    gap: 1.75rem;
  }

  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    background: var(--bg-card);
    border-radius: 12px;
    border: 1px solid var(--border-primary);
    margin-top: 2rem;
  }

  .empty-state-text {
    font-size: 1.25rem;
    color: var(--text-secondary);
    margin: 0 0 0.5rem 0;
    font-weight: 500;
  }

  .empty-state-hint {
    font-size: 0.9375rem;
    color: var(--text-quaternary);
    margin: 0;
  }

  @media (max-width: 768px) {
    .container {
      padding: 2rem 1rem;
    }

    header {
      margin-bottom: 2.5rem;
    }

    .theme-toggle {
      left: 1rem;
      top: 1rem;
      width: 40px;
      height: 40px;
    }

    .theme-icon {
      width: 18px;
      height: 18px;
    }

    .github-link {
      position: static;
      margin-bottom: 1rem;
      justify-content: center;
    }

    h1 {
      font-size: 2.25rem;
    }

    .subtitle {
      font-size: 1.125rem;
    }

    .controls {
      padding: 1.5rem;
    }

    .entries-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .search-container {
      flex-direction: column;
    }

    .clear-btn {
      width: 100%;
    }
  }
</style>

<script>
  (function() {
    const THEME_STORAGE_KEY = 'theme-preference';
    const html = document.documentElement;

    function getSystemTheme() {
      return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
    }

    function getStoredTheme() {
      return localStorage.getItem(THEME_STORAGE_KEY);
    }

    function setTheme(preference) {
      const storedPreference = preference;
      let appliedTheme = preference;

      if (preference === 'system') {
        appliedTheme = getSystemTheme();
      }

      html.setAttribute('data-theme', appliedTheme);
      localStorage.setItem(THEME_STORAGE_KEY, storedPreference);
      updateThemeIcon(appliedTheme, storedPreference);
    }

    function updateThemeIcon(appliedTheme, storedPreference) {
      const themeToggle = document.getElementById('theme-toggle');
      if (themeToggle) {
        themeToggle.setAttribute('data-mode', storedPreference || 'system');
      }
    }

    function toggleTheme() {
      const current = getStoredTheme() || 'system';
      let next;

      if (current === 'system') {
        next = 'light';
      } else if (current === 'light') {
        next = 'dark';
      } else {
        next = 'system';
      }

      setTheme(next);
    }

    const storedTheme = getStoredTheme() || 'system';
    const appliedTheme = storedTheme === 'system' ? getSystemTheme() : storedTheme;
    setTheme(storedTheme);

    const themeToggle = document.getElementById('theme-toggle');
    if (themeToggle) {
      themeToggle.addEventListener('click', toggleTheme);
    }

    window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', () => {
      const stored = getStoredTheme();
      if (stored === 'system' || !stored) {
        const appliedTheme = getSystemTheme();
        updateThemeIcon(appliedTheme, 'system');
        html.setAttribute('data-theme', appliedTheme);
      }
    });
  })();
</script>

<script>
  const searchBar = document.getElementById('search-bar');
  const clearBtn = document.getElementById('clear-search');
  const entriesGrid = document.getElementById('entries-grid');
  const entries = Array.from(document.querySelectorAll('.entry-card'));
  const filterTags = Array.from(document.querySelectorAll('.filter-tag'));
  const filterCategories = Array.from(document.querySelectorAll('.filter-category'));
  const cardTags = Array.from(document.querySelectorAll('.tag'));
  const resultsCount = document.getElementById('results-count');
  const emptyState = document.getElementById('empty-state');

  let activeTags = [];
  let activeCategory = null;
  let searchQuery = '';

  function updateResults() {
    let visibleCount = 0;

    entries.forEach(card => {
      const cardTitle = card.querySelector('.card-title')?.textContent?.toLowerCase() || '';
      const cardDescription = card.querySelector('.card-description')?.textContent?.toLowerCase() || '';
      const cardTagsString = card.getAttribute('data-tags')?.toLowerCase() || '';
      const cardTagsArray = cardTagsString ? cardTagsString.split(',').map(t => t.trim()) : [];
      const cardCategory = card.getAttribute('data-category') || '';

      const matchesSearch = !searchQuery ||
        cardTitle.includes(searchQuery) ||
        cardDescription.includes(searchQuery) ||
        cardTagsString.includes(searchQuery);

      // Entry must have ALL selected tags (AND logic)
      const matchesTags = activeTags.length === 0 ||
        activeTags.every(tag => cardTagsArray.includes(tag.toLowerCase()));
      const matchesCategory = !activeCategory || cardCategory === activeCategory;

      if (matchesSearch && matchesTags && matchesCategory) {
        card.classList.remove('hidden');
        visibleCount++;
      } else {
        card.classList.add('hidden');
      }
    });

    resultsCount.textContent = visibleCount.toString();

    if (visibleCount === 0) {
      emptyState.style.display = 'block';
    } else {
      emptyState.style.display = 'none';
    }
  }

  function toggleTag(tag) {
    const tagLower = tag.toLowerCase();
    const index = activeTags.indexOf(tagLower);
    if (index > -1) {
      activeTags.splice(index, 1);
    } else {
      activeTags.push(tagLower);
    }
    updateTagUI();
    updateResults();
  }

  function updateTagUI() {
    filterTags.forEach(ft => {
      const tagValue = ft.getAttribute('data-tag');
      if (activeTags.includes(tagValue.toLowerCase())) {
        ft.classList.add('active');
      } else {
        ft.classList.remove('active');
      }
    });
  }

  function setActiveCategory(category) {
    activeCategory = category;
    filterCategories.forEach(fc => {
      if (fc.getAttribute('data-category') === category) {
        fc.classList.add('active');
      } else {
        fc.classList.remove('active');
      }
    });
    updateResults();
  }

  // Search bar
  searchBar.addEventListener('input', (e) => {
    searchQuery = e.target.value.toLowerCase().trim();
    clearBtn.style.display = searchQuery ? 'block' : 'none';
    updateResults();
  });

  clearBtn.addEventListener('click', () => {
    searchBar.value = '';
    searchQuery = '';
    clearBtn.style.display = 'none';
    updateResults();
  });

  // Filter tags
  filterTags.forEach(tag => {
    tag.addEventListener('click', () => {
      const tagValue = tag.getAttribute('data-tag');
      toggleTag(tagValue);
    });
  });

  // Filter categories
  filterCategories.forEach(category => {
    category.addEventListener('click', () => {
      const categoryValue = category.getAttribute('data-category');
      if (activeCategory === categoryValue) {
        setActiveCategory(null);
      } else {
        setActiveCategory(categoryValue);
      }
    });
  });

  // Card tags (clicking a tag in a card)
  cardTags.forEach(tag => {
    tag.addEventListener('click', (e) => {
      e.stopPropagation();
      const tagValue = tag.getAttribute('data-tag');
      toggleTag(tagValue);
      searchBar.value = '';
      searchQuery = '';
      clearBtn.style.display = 'none';
    });
  });
</script>
