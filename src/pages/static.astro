import yaml from 'js-yaml';
import { readFileSync, readdirSync } from 'fs';
import { join } from 'path';

// Get entries directory relative to project root
const entriesDir = join(process.cwd(), 'src', 'data', 'entries');

// Load all YAML entry files
const entryFiles = readdirSync(entriesDir).filter(f => f.endsWith('.yaml'));

// Convert to array with IDs derived from filenames
const entriesData = entryFiles.map(filename => {
  const id = filename.replace('.yaml', '');
  const filePath = join(entriesDir, filename);
  const fileContent = readFileSync(filePath, 'utf-8');
  const data = yaml.load(fileContent) as any;
  return {
    id,
    ...data
  };
});

// Group entries by category
const entriesByCategory = entriesData.reduce((acc, entry) => {
  const category = entry.category || 'uncategorized';
  if (!acc[category]) {
    acc[category] = [];
  }
  acc[category].push(entry);
  return acc;
}, {} as Record<string, typeof entriesData>);

// Sort categories and entries within each category
const sortedCategories = Object.keys(entriesByCategory).sort();
sortedCategories.forEach(category => {
  entriesByCategory[category].sort((a, b) => a.title.localeCompare(b.title));
});

// Extract domain from URL
function getDomain(url: string): string {
  try {
    const urlObj = new URL(url);
    let hostname = urlObj.hostname;
    if (hostname.startsWith('www.')) {
      hostname = hostname.slice(4);
    }
    return hostname;
  } catch {
    return url.replace(/^https?:\/\//, '').replace(/^www\./, '').split('/')[0];
  }
}

// Find repository link for title, or use first link
function getTitleLink(entry: typeof entriesData[0]) {
  if (!entry.links || entry.links.length === 0) {
    return undefined;
  }
  return entry.links.find(link => link.title.toLowerCase() === 'repository') || entry.links[0];
}
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Community-curated list of useful software and repositories for lattice quantum field theory" />
    <title>Lattice QFT Software List - Static</title>
    <script is:inline>
      (function() {
        const THEME_STORAGE_KEY = 'theme-preference';
        const html = document.documentElement;

        function getSystemTheme() {
          return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
        }

        function getStoredTheme() {
          return localStorage.getItem(THEME_STORAGE_KEY);
        }

        const stored = getStoredTheme() || 'system';
        const applied = stored === 'system' ? getSystemTheme() : stored;
        html.setAttribute('data-theme', applied);
      })();
    </script>
  </head>
  <body>
    <div class="container">
      <header>
        <a href="https://github.com/lattice-software/list" target="_blank" rel="noopener noreferrer" class="github-link">
